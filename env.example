BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-5.1

# GPT-5.1 reasoning parameters
OPENAI_REASONING_EFFORT=medium    # none/low/medium/high - controls thinking depth
OPENAI_VERBOSITY=medium           # low/medium/high - response length hint

# speech-to-text (OpenAI Whisper API)
STT_LANGUAGE=auto         # auto/en/ru/... if you want to force language

# Memory (bot learns from analyzed content)
MEMORY_ENABLED=true                          # Enable/disable memory system
MEMORY_MAX_ENTRIES=100                       # Max stored entries per user
MEMORY_EMBEDDING_MODEL=text-embedding-3-small # OpenAI embedding model
MEMORY_SEARCH_TOP_K=3                        # Number of search results

# Supabase (database for memory storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_TABLE=bot_memory                    # Table name for memory storage

# system
WORKDIR=./data
LOG_LEVEL=INFO
